    @model Projeto1Loja.Models.Produto

    @{
        ViewData["Title"] = "EditarProduto";
    }
   

    <link href="~/css/editarProduto.css" rel="stylesheet" />

<fieldset>
    <h1 class="titulo-prod">Editar Produto</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="EditarProduto" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <input type="hidden" asp-for="idProduto" class="form-control" />
                    <span asp-validation-for="idProduto" class="text-danger"></span>
                </div>

                <div class="grupo">
                    <label>Nome</label>
                    <input asp-for="nome" class="inputpe" placeholder="Nome" autofocus maxlength="50" required />
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="grupo">
                    <label>Descrição</label>
                    <input asp-for="descricao" class="inputpe" placeholder="Descrição" maxlength="50" required />
                    <span asp-validation-for="descricao" class="text-danger"></span>
                </div>

                <div class="grupo">
                    <label>Preço</label>
                    <input asp-for="preco" class="inputpe" placeholder="Preço" maxlength="50" required />
                    <span asp-validation-for="preco" class="text-danger"></span>
                </div>

                <div class="grupo">
                    <label>Quantidade</label>
                    <input asp-for="quantidade" class="inputpe" placeholder="Quantidade" maxlength="50" required />
                    <span asp-validation-for="quantidade" class="text-danger"></span>
                </div>

                <div class="btndiv">
                    <div class="form-group">
                        <input type="submit" value="Alterar" class="btn btn-primary" />
                    </div>

                    <div class="form-group">
                        <a asp-action="IndexProduto" class="btn btn-primary">Voltar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</fieldset>