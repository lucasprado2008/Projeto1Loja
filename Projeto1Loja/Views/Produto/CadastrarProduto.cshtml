@model Projeto1Loja.Models.Produto

@{
    ViewData["Title"] = "Cadastro Produto";
    
}

<link href="~/css/cadastroProduto.css" rel="stylesheet" />

<fieldset>
    <h1 class="titulo-cli">Cadastrar Produto</h1>
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="CadastrarProduto" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="input-group">
                    <input asp-for="nome" class="form-control" placeholder="Nome" autofocus maxlength="50" required/>
                    <span asp-validation-for="nome" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <input asp-for="descricao" class="form-control" placeholder="Descrição" maxlength="50" required />
                    <span asp-validation-for="descricao" class="text-danger"></span>
                </div>

                <div class ="input-group">
                    <input asp-for="preco" class="form-control" placeholder="Preço" required />
                    <span asp-validation-for="preco" class="text-danger"></span>
                </div>

                <div class="input-group">
                    <input asp-for="quantidade" class="form-control" placeholder="Quantidade" required />
                    <span asp-validation-for="quantidade" class="text-danger"></span>
                </div>

                <div class="btn">
                    <div class="form-group">
                        <input type="submit" value="Cadastrar" class="btn btn-primary" />
                    </div>
                    <div class="form-group">
                        <a asp-action="IndexProduto" class="btn btn-primary">Voltar</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</fieldset>